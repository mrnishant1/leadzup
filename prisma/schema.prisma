generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model preExistingUsers{
  id String @id @default(uuid())
  gmail String @unique
}

model UserData {
  id             String           @id @default(uuid())
  gmail          String           @unique
  PurposeOfUse   String
  website        String
  description    String
  keywords       String[]
  competitors    String[]
  activePlan     String
  isDemoProvided Boolean
  currentCredits Int
  leads          GeneratedLeads[]
  directMessages directMessages[]

  @@map("UserData")
}

model GeneratedLeads {
  id     Int      @id @default(autoincrement())
  post   String
  time   DateTime @default(now())
  userMail String
  user   UserData @relation(fields: [userMail], references: [gmail])

  @@map("GeneratedLeads")
}

model directMessages {
  id      Int      @id @unique @default(autoincrement())
  message String
  userId  String
  user    UserData @relation(fields: [userId], references: [id])

  @@map("directMessages")
}

model rawPostsMatched{
  id Int @id @default(autoincrement())
  gmail String
  title String
  postId String 
  link String
  createdAt DateTime @default(now())
}

